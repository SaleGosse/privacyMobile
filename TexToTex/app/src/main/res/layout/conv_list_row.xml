<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4px"
        android:src="@android:drawable/ic_lock_idle_charging">
    </ImageView>

    <TextView
        android:id="@+id/row_username"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/row_icon"
        android:layout_alignParentTop="true"
        android:text="@+id/label"
        android:textSize="40px" >
    </TextView>

    <TextView
        android:id="@+id/row_date"
        android:layout_toRightOf="@+id/row_username"
        android:layout_width="wrap_content"
        android:textSize="15px"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/row_message"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/row_username"
        android:layout_toRightOf="@+id/row_icon"
        android:layout_alignLeft="@+id/row_username"
        android:layout_alignParentBottom="true"
        android:textSize="15px"
        android:hint="This is the content of the last message"/>



</RelativeLayout>